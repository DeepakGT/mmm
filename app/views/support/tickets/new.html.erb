<h2>Support</h2>
<div class='row justify-content-center'>
  <div class='col-md-6'>
    <%= form_for(@ticket) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <div class='text-danger'><%= get_error_for(f.object, :email) %></div>
      </div>
      <div class="mb-3">
        <%= f.label :subject, class: 'form-label' %>
        <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
        <div class='text-danger'><%= get_error_for(f.object, :subject) %></div>
      </div>
      <div class="mb-3">
        <%= f.label :message, class: 'form-label' %>
        <%= f.text_area :message, autofocus: true, class: 'form-control' %>
        <div class='text-danger'><%= get_error_for(f.object, :message) %></div>
      </div>
      <div class="actions mt-2 d-grid gap-2">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
      <div class='form-text text-muted text-center'> If you want to send attachments as well. Please write in our inbox derectly <span class='center'><%= mail_to "mmm@yopmail.com" %></span> </div>
    <% end %>
  </div>
</div>

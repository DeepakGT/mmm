<%= form_for payment, url: verify_payment_path(payment_id: payment.id), remote: true do |f| %>
  <div class="card">
    <div class="card-body">
      <label for="transaction_id" class="form-label">Transaction Hash: </label>
      <%= f.text_field :transaction_id, required: true, class: 'form-control' %>
    </div>
  </div>
  <div class="modal-footer">
    <span id='paymentNotConfirmedError' class='error text-danger'></span>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.submit :Confirm, class: "btn btn-success" %>
  </div>
<% end %>
